    <script>
        // Enhanced inline reply functionality
        document.querySelectorAll('.reply-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const post = this.closest('.post-card');
                const inlineReply = post.querySelector('.inline-reply');
                const textarea = inlineReply.querySelector('textarea');
                
                // Toggle reply form
                inlineReply.classList.toggle('active');
                
                // Focus textarea when shown
                if (inlineReply.classList.contains('active')) {
                    setTimeout(() => textarea.focus(), 100);
                }
            });
        });

        // Character counter for reply textarea
        document.querySelectorAll('.inline-reply textarea').forEach(textarea => {
            textarea.addEventListener('input', function() {
                const maxLength = 180;
                const currentLength = this.value.length;
                const counter = this.closest('.inline-reply').querySelector('small');
                
                if (counter) {
                    counter.textContent = `${currentLength}/${maxLength} karakter`;
                    
                    // Change color when approaching limit
                    if (currentLength > maxLength * 0.8) {
                        counter.style.color = '#ff6b35';
                    } else {
                        counter.style.color = '#6c757d';
                    }
                }
            });
        });
    </script>
