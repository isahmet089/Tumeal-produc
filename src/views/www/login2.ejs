<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title %> | TuMeal</title>
        <!-- Bootstrap 5 CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="/styles.css">
        <style>
            body {
                background: #f8f9fa;
                font-family: 'Poppins', sans-serif;
            }
            .brand {
                font-weight: 700;
                font-size: 2rem;
                color: #2c3e50;
                letter-spacing: -1px;
            }
            .brand .logo {
                color: #ff6b35;
                margin-right: 8px;
            }
            .hero {
                background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
                background-size: cover;
                background-position: center;
                color: white;
                border-radius: 20px;
                padding: 4rem 2rem;
                margin: 2rem auto;
                text-align: center;
                position: relative;
                overflow: hidden;
            }
            .hero h1 {
                font-weight: 700;
                font-size: 3rem;
                margin-bottom: 1rem;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            }
            .hero p {
                font-size: 1.3rem;
                margin-bottom: 2rem;
                text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            }
            .stats-card {
                background: white;
                border-radius: 15px;
                padding: 1.5rem;
                text-align: center;
                box-shadow: 0 4px 15px rgba(0,0,0,0.05);
                transition: transform 0.3s;
            }
            .stats-card:hover {
                transform: translateY(-5px);
            }
            .stats-card i {
                font-size: 2rem;
                color: #ff6b35;
                margin-bottom: 1rem;
            }
            .stats-card h3 {
                font-size: 1.8rem;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 0.5rem;
            }
            .menu-card {
                background: white;
                border-radius: 20px;
                box-shadow: 0 4px 20px rgba(0,0,0,0.08);
                padding: 2rem;
                margin-bottom: 2rem;
                transition: transform 0.3s;
            }
            .menu-card:hover {
                transform: translateY(-5px);
            }
            .menu-item {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 1rem;
                border-radius: 10px;
                margin-bottom: 0.5rem;
                transition: background 0.3s;
            }
            .menu-item:hover {
                background: #f8f9fa;
            }
            .trending-foods {
                background: white;
                border-radius: 20px;
                padding: 2rem;
                box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            }
            .trending-food-item {
                display: flex;
                align-items: center;
                padding: 1rem;
                border-radius: 10px;
                margin-bottom: 1rem;
                transition: background 0.3s;
            }
            .trending-food-item:hover {
                background: #f8f9fa;
            }
            .trending-food-item img {
                width: 60px;
                height: 60px;
                border-radius: 10px;
                object-fit: cover;
                margin-right: 1rem;
            }
            .btn-orange {
                background: #ff6b35;
                color: white;
                border-radius: 10px;
                font-weight: 600;
                padding: 12px 25px;
                border: none;
                transition: all 0.3s;
            }
            .btn-orange:hover {
                background: #e55d2a;
                color: white;
                transform: translateY(-2px);
            }
            .quick-links {
                background: white;
                border-radius: 20px;
                padding: 2rem;
                box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            }
            .quick-link-item {
                display: flex;
                align-items: center;
                padding: 1rem;
                border-radius: 10px;
                margin-bottom: 0.5rem;
                transition: all 0.3s;
                text-decoration: none;
                color: #2c3e50;
            }
            .quick-link-item:hover {
                background: #f8f9fa;
                color: #ff6b35;
                transform: translateX(5px);
            }
            .quick-link-item i {
                font-size: 1.5rem;
                margin-right: 1rem;
                color: #ff6b35;
            }
        </style>
    </head>
<body>
    <%- include('../partials/www/common/navbar') %>
 <!-- Main Content -->
 <div class="container mt-5 pt-5">
  <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
          <div class="card login-card animate__animated animate__fadeIn">
              <div class="card-body p-4">
                  <div class="text-center mb-4">
                      <i class="fas fa-user-circle fa-3x text-primary mb-3"></i>
                      <h4>Giriş Yap</h4>
                      <p class="text-muted">Hesabınıza giriş yaparak yorum yapabilir ve puanlama yapabilirsiniz.</p>
                  </div>
                  <form>
                      <div class="mb-3">
                          <label for="email" class="form-label">E-posta Adresi</label>
                          <div class="input-group">
                              <span class="input-group-text">
                                  <i class="fa-regular fa-envelope"></i>
                              </span>
                              <input type="email" class="form-control" id="email" placeholder="ornek@universite.edu.tr" required>
                          </div>
                      </div>
                      <div class="mb-3">
                          <label for="password" class="form-label">Şifre</label>
                          <div class="input-group">
                              <span class="input-group-text">
                                  <i class="fa-solid fa-lock"></i>
                              </span>
                              <input type="password" class="form-control" id="password" placeholder="••••••••" required>
                              <span class="input-group-text">
                                  <i class="fa-regular fa-eye"></i>
                              </span>
                          </div>
                      </div>
                      <div class="mb-3 d-flex justify-content-between align-items-center">
                          <div class="form-check">
                              <input type="checkbox" class="form-check-input" id="remember">
                              <label class="form-check-label" for="remember">Beni hatırla</label>
                          </div>
                          <a href="#" class="forgot-link">Şifremi unuttum</a>
                      </div>
                      <button type="submit" class="btn btn-orange w-100">
                          <i class="fa-solid fa-sign-in-alt me-2"></i>Giriş Yap
                      </button>
                      <div class="text-center mt-3">
                          <span>Hesabınız yok mu? <a href="register.html" class="register-link">Kayıt Ol</a></span>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>

    <%- include('../partials/www/common/footer') %>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Menü oylama yıldızları
document.addEventListener('DOMContentLoaded', function() {
  const stars = document.querySelectorAll('.menu-rating i');
  let currentRating = 0;
  stars.forEach(star => {
    star.addEventListener('mouseenter', function() {
      const val = parseInt(this.getAttribute('data-value'));
      stars.forEach((s, i) => {
        s.classList.toggle('fa-solid', i < val);
        s.classList.toggle('fa-regular', i >= val);
      });
    });
    star.addEventListener('mouseleave', function() {
      stars.forEach((s, i) => {
        s.classList.toggle('fa-solid', i < currentRating);
        s.classList.toggle('fa-regular', i >= currentRating);
      });
    });
    star.addEventListener('click', function() {
      currentRating = parseInt(this.getAttribute('data-value'));
      stars.forEach((s, i) => {
        s.classList.toggle('fa-solid', i < currentRating);
        s.classList.toggle('fa-regular', i >= currentRating);
      });
    });
  });
});
// Favorilere ekle butonu
document.addEventListener('DOMContentLoaded', function() {
  const favBtn = document.getElementById('fav-btn');
  let isFav = false;
  favBtn.addEventListener('click', function() {
    isFav = !isFav;
    const icon = favBtn.querySelector('i');
    if(isFav) {
      favBtn.classList.remove('btn-outline-danger');
      favBtn.classList.add('btn-danger');
      icon.classList.remove('fa-regular');
      icon.classList.add('fa-solid');
      favBtn.innerHTML = '<i class="fa-solid fa-heart me-1"></i>Favorilere Eklendi';
    } else {
      favBtn.classList.remove('btn-danger');
      favBtn.classList.add('btn-outline-danger');
      icon.classList.remove('fa-solid');
      icon.classList.add('fa-regular');
      favBtn.innerHTML = '<i class="fa-regular fa-heart me-1"></i>Favorilere Ekle';
    }
  });
});
// Her yemek için bağımsız yıldızlı oylama
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.food-rating').forEach(function(ratingEl) {
    let current = 0;
    const stars = ratingEl.querySelectorAll('i');
    stars.forEach(star => {
      star.addEventListener('mouseenter', function() {
        const val = parseInt(this.getAttribute('data-value'));
        stars.forEach((s, i) => {
          s.classList.toggle('fa-solid', i < val);
          s.classList.toggle('fa-regular', i >= val);
        });
      });
      star.addEventListener('mouseleave', function() {
        stars.forEach((s, i) => {
          s.classList.toggle('fa-solid', i < current);
          s.classList.toggle('fa-regular', i >= current);
        });
      });
      star.addEventListener('click', function() {
        current = parseInt(this.getAttribute('data-value'));
        stars.forEach((s, i) => {
          s.classList.toggle('fa-solid', i < current);
          s.classList.toggle('fa-regular', i >= current);
        });
      });
    });
  });
});
</script>
</html>