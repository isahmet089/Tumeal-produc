<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= profileUser.firstName %> <%= profileUser.lastName %> | TuMeal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <style>
     body {
      background: #f6f8fa;
      font-family: 'Poppins', sans-serif;
    }
    .brand {
      font-weight: 700;
      font-size: 2rem;
      color: #2c3e50;
      letter-spacing: -1px;
    }
    .brand .logo {
      color: #ff6b35;
      margin-right: 8px;
    }
    .profile-card {
      background: #fff;
      border-radius: 18px;
      box-shadow: 0 4px 24px rgba(44,62,80,0.08);
      padding: 2.5rem 2rem 2rem 2rem;
      max-width: 500px;
      margin: 3rem auto 2rem auto;
      text-align: center;
    }
    .profile-avatar {
      width: 90px;
      height: 90px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 1rem;
      border: 4px solid #ff6b35;
    }
    .profile-name {
      font-size: 1.5rem;
      font-weight: 700;
      color: #2c3e50;
      margin-bottom: 0.2rem;
    }
    .profile-email {
      color: #7f8c8d;
      font-size: 1.05rem;
      margin-bottom: 0.2rem;
    }
    .profile-id {
      color: #ff6b35;
      font-size: 1rem;
      margin-bottom: 1.2rem;
    }
    .profile-btns .btn {
      margin: 0 0.5rem 0.5rem 0.5rem;
      border-radius: 10px;
      font-weight: 600;
      font-size: 1.05rem;
      padding: 10px 24px;
    }
    .btn-orange {
      background: #ff6b35;
      color: #fff;
      border: none;
      transition: background 0.2s;
    }
    .btn-orange:hover {
      background: #e55d2a;
      color: #fff;
    }
    .btn-outline-orange {
      border: 2px solid #ff6b35;
      color: #ff6b35;
      background: #fff;
    }
    .btn-outline-orange:hover {
      background: #ff6b35;
      color: #fff;
    }
    .comment-card {
      background: #fff;
      border-radius: 14px;
      box-shadow: 0 2px 12px rgba(44,62,80,0.06);
      padding: 1.2rem 1.2rem 1rem 1.2rem;
      margin-bottom: 1.2rem;
    }
    .comment-header {
      display: flex;
      align-items: center;
      margin-bottom: 0.3rem;
    }
    .comment-avatar {
      width: 44px;
      height: 44px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 1rem;
    }
    .comment-name {
      font-weight: 600;
      color: #2c3e50;
      margin-right: 0.7rem;
    }
    .comment-meal {
      color: #ff6b35;
      font-size: 1rem;
      margin-right: 0.7rem;
    }
    .comment-date {
      color: #7f8c8d;
      font-size: 0.95rem;
    }
    .comment-rating {
      color: #f1c40f;
      font-size: 1.1rem;
      margin-left: auto;
    }
    .comment-text {
      color: #2c3e50;
      font-size: 1rem;
      margin-bottom: 0;
    }
    .footer {
      background: #2c3e50;
      color: #fff;
      padding: 2rem 0 1rem 0;
      text-align: center;
      margin-top: 3rem;
    }
    .footer a {
      color: #ff6b35;
      margin: 0 8px;
      font-size: 1.2rem;
      text-decoration: none;
    }
    .footer a:hover {
      color: #fff;
    }
    .account-status {
    text-align: center;
    margin-bottom: 1rem;
}
.account-status .badge {
    font-size: 1rem;
    border-radius: 20px;
    font-weight: 600;
}
.profile-btns .btn {
    min-width: 160px;
    font-weight: 500;
}
@media (max-width: 576px) {
    .profile-btns {
        flex-direction: column !important;
        gap: 10px !important;
    }
    .profile-btns .btn {
        width: 100%;
    }
  }
    /* ... profile.ejs ile aynı stiller ... */
    .add-friend-btn {
      margin-top: 1rem;
      font-weight: 600;
      border-radius: 10px;
      padding: 10px 24px;
      background: #ff6b35;
      color: #fff;
      border: none;
      transition: background 0.2s;
    }
    .add-friend-btn:hover {
      background: #e55d2a;
      color: #fff;
    }
  </style>
</head>
<body>
  <%- include('../partials/www/common/navbar') %>
  <div class="profile-card">
    <img src="https://ui-avatars.com/api/?name=<%= profileUser.firstName %>+<%= profileUser.lastName %>&background=ececec&color=2c3e50"
         class="profile-avatar"
         alt="<%= profileUser.firstName %> <%= profileUser.lastName %>">
    <div class="profile-name"><%= profileUser.firstName %> <%= profileUser.lastName %></div>
    <div class="profile-email"><%= profileUser.email %></div>
    <div class="profile-id">Öğrenci No: <%= profileUser.studentId %></div>
    <div class="account-status mb-3">
        <% if (profileUser.isVerified) { %>
            <span class="badge bg-success px-3 py-2">
                <i class="fas fa-check-circle me-1"></i> Onaylı Hesap
            </span>
        <% } else { %>
            <span class="badge bg-warning text-dark px-3 py-2">
                <i class="fas fa-exclamation-circle me-1"></i> Onaylanmamış Hesap
            </span>
        <% } %>
    </div>
    <% if (!currentUser || currentUser._id.toString() !== profileUser._id.toString()) { %>
      <button class="add-friend-btn">
        <i class="fa-solid fa-user-plus me-2"></i>Arkadaş Ekle
      </button>
    <% } %>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="posts-section mb-4">
        <h4 class="mb-3 mt-4 fw-bold text-center" style="color:#2c3e50;">Postlar</h4>
        <% if (posts.length === 0) { %>
          <div class="alert alert-info text-center">Henüz post yok.</div>
        <% } else { %>
          <% posts.forEach(post => { %>
            <div class="comment-card">
              <div class="comment-header">
                <span class="comment-name"><%= profileUser.firstName %> <%= profileUser.lastName %></span>
                <span class="comment-date"><%= post.createdAt.toLocaleDateString('tr-TR') %></span>
              </div>
              <div class="comment-text"><%= post.content %></div>
            </div>
          <% }) %>
        <% } %>
      </div>
      <div class="comments-section">
        <h4 class="mb-3 mt-4 fw-bold text-center" style="color:#2c3e50;">Yorumlar</h4>
        <% if (comments.length === 0) { %>
          <div class="alert alert-info text-center">Henüz yorum yok.</div>
        <% } else { %>
          <% comments.forEach(comment => { %>
            <div class="comment-card">
              <div class="comment-header">
                <span class="comment-name"><%= profileUser.firstName %> <%= profileUser.lastName %></span>
                <span class="comment-date"><%= comment.createdAt.toLocaleDateString('tr-TR') %></span>
              </div>
              <div class="comment-text"><%= comment.content %></div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('../partials/www/common/footer') %>
</body>
</html>